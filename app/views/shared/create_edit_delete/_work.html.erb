<div class="container">
<div class="well col-md-12">
<div class="col-md-9">
  <p>作品 :</p> 
  <%= form_for @work do |f| %>
  <div class="well col-md-12">
    <%= f.hidden_field :user_id, :value => session[:user_id] %> 
    <div class="form-group">
      <%= f.label "作品標題" %>
      <%= f.text_field :title %>
      <br><br>
      <%= f.label "作品描述" %>
      <%= f.text_field :description %>
      <br><br>
      <%= f.label "作品Link" %>
      <%= f.text_field :link %>
    </div>
  </div>
  <div class="pull-right">
    <%= submit_tag "確認", class: "btn btn-success" %>
  </div>
  <% end %>
</div>
</div>
</div>