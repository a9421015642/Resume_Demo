<div class="col-md-12">
  <div class="well col-md-8"> 
  <%= form_tag '/login' do |f| %>
    <div class="form-group">
    <%= label_tag :name %>
      <br>
    <%= text_field_tag :name, params[:name] %>
    </div>
    <div class="form-group">
    <%= label_tag :password %>
      <br>
    <%= password_field_tag :password, params[:password] %>
    </div>
    <br>
    <%= submit_tag "確認", class: "btn btn-success" %>
  <% end %>
  </div>
</div>